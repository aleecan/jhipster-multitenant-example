<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity GateControl.
    -->
    <changeSet id="20201130010436-1" author="jhipster">
        <createTable tableName="gate_control">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="daytime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="card_type" type="varchar(1)">
                <constraints nullable="true" />
            </column>
            <column name="direction" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="access_ack" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="gate_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="card_no_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="access_code_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="visitor_book_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="access_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="gate_control" columnName="daytime" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
