    <!--
        Added the constraints for entity AnnualLeave.
    -->
    <changeSet id="20201213183404-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="annual_leave"
                                 constraintName="fk_annual_leave_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>

        <addForeignKeyConstraint baseColumnNames="schedule_id"
                                 baseTableName="annual_leave"
                                 constraintName="fk_annual_leave_schedule_id"
                                 referencedColumnNames="id"
                                 referencedTableName="schedule"/>

    </changeSet>
</databaseChangeLog>
