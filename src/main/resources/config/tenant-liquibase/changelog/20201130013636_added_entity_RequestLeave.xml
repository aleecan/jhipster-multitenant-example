<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity RequestLeave.
    -->
    <changeSet id="20201130013636-1" author="jhipster">
        <createTable tableName="request_leave">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="paid_day" type="double">
                <constraints nullable="true" />
            </column>
            <column name="paid_hour" type="varchar(8)">
                <constraints nullable="true" />
            </column>
            <column name="offday" type="double">
                <constraints nullable="true" />
            </column>
            <column name="holiday" type="double">
                <constraints nullable="true" />
            </column>
            <column name="militory" type="double">
                <constraints nullable="true" />
            </column>
            <column name="travel" type="double">
                <constraints nullable="true" />
            </column>
            <column name="description" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="created" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="modified" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="modified_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="approved" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="approved_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="approved_daytime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="approved_1" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="approved_1_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="approved_1_daytime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="approved_2" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="approved_2_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="approved_2_daytime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="rejected" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="rejected_daytime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="rejected_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="schedule_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="request_leave" columnName="created" columnDataType="datetime"/>
        <dropDefaultValue tableName="request_leave" columnName="modified" columnDataType="datetime"/>
        <dropDefaultValue tableName="request_leave" columnName="approved_daytime" columnDataType="datetime"/>
        <dropDefaultValue tableName="request_leave" columnName="approved_1_daytime" columnDataType="datetime"/>
        <dropDefaultValue tableName="request_leave" columnName="approved_2_daytime" columnDataType="datetime"/>
        <dropDefaultValue tableName="request_leave" columnName="rejected_daytime" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
