    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity ZoneControl.
    -->
    <changeSet id="20201130022136-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="card_no_id"
                                 baseTableName="zone_control"
                                 constraintName="fk_zone_control_card_no_id"
