<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <changeSet id="6" author="Kolege">
        <addColumn tableName="exchange_record">
            <column name="bought_currency_type_id" type="bigint" afterColumn="created_date">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <renameColumn tableName="exchange_record" oldColumnName="currency_type_id"
                      newColumnName="sold_currency_type_id" columnDataType="bigint"/>
        <addForeignKeyConstraint baseColumnNames="bought_currency_type_id"
                                 baseTableName="exchange_record"
                                 constraintName="fk_exchange_record_bought_currency_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="currency_type"/>
        <addForeignKeyConstraint baseColumnNames="sold_currency_type_id"
                                 baseTableName="exchange_record"
                                 constraintName="fk_exchange_record_sold_currency_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="currency_type"/>
    </changeSet>

</databaseChangeLog>
