<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity ProcessDailyAnalysis.
    -->
    <changeSet id="20201130013036-1" author="jhipster">
        <createTable tableName="process_daily_analysis">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(80)">
                <constraints nullable="false" />
            </column>
            <column name="run_for_all_employee" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="apply_tolerances" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="check_early_entry_late_exit" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="check_late_entry_early_exit" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="aplly_tolerance_first_entry_last_exit" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="check_prev_and_next_day_schedule" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="use_prev_day_shiftgroup" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="use_first_entry_last_exit" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="complete_work_when_mising_entry_exit" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="created" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="modified" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="modified_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="process_daily_analysis" columnName="created" columnDataType="datetime"/>
        <dropDefaultValue tableName="process_daily_analysis" columnName="modified" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
