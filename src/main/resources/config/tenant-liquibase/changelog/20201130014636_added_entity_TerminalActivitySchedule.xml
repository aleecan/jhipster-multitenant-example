<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity TerminalActivitySchedule.
    -->
    <changeSet id="20201130014636-1" author="jhipster">
        <createTable tableName="terminal_activity_schedule">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_time" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="end_time" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="min_attendance" type="varchar(8)">
                <constraints nullable="false" />
            </column>
            <column name="location" type="varchar(40)">
                <constraints nullable="false" />
            </column>
            <column name="terminal_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="activity_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="terminal_activity_schedule" columnName="start_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="terminal_activity_schedule" columnName="end_time" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
