<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="autoIncrement" value="true"/>
    <changeSet id="20201129212605-1" author="jhipster">
        <createTable tableName="annual_leave_group">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(80)">
                <constraints nullable="true"/>
            </column>
            <column name="created" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="modified" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="modified_user" type="varchar(80)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <dropDefaultValue tableName="annual_leave_group" columnName="created" columnDataType="datetime"/>
        <dropDefaultValue tableName="annual_leave_group" columnName="modified" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
