        <addForeignKeyConstraint baseColumnNames="work_contract_id"
                                 baseTableName="employee_history"
                                 constraintName="fk_employee_history_work_contract_id"
                                 referencedColumnNames="id"
                                 referencedTableName="work_contract"/>

    </changeSet>
</databaseChangeLog>
