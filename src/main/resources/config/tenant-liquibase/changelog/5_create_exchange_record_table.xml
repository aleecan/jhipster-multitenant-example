<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <changeSet id="5" author="Kolege">
        <createTable tableName="exchange_record">
            <column name="id" type="bigint" autoIncrement="${autoincrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="currency_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="unit_price" type="decimal(16, 4)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(16, 4)">
                <constraints nullable="false"/>
            </column>
            <column name="current_tax_rate" type="decimal(16, 4)">
                <constraints nullable="false"/>
            </column>
            <column name="total_price" type="decimal(16, 4)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="bigint"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
