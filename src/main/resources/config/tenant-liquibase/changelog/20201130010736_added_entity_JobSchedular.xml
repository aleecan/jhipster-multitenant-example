<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity JobSchedular.
    -->
    <changeSet id="20201130010736-1" author="jhipster">
        <createTable tableName="job_schedular">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="job_name" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="description" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="procedure_name" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="start_datetime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="end_datetime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="isactive" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="isfixed" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="isrecursive" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="recursive_minute" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="start_time" type="varchar(8)">
                <constraints nullable="true" />
            </column>
            <column name="end_time" type="varchar(8)">
                <constraints nullable="true" />
            </column>
            <column name="lastrun_datetime" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="parameter" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="daytime" type="varchar(8)">
                <constraints nullable="true" />
            </column>
            <column name="type" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="export_timecardrec" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="import_transaction" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="import_timecardrec" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_dailyanalysis" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_daily" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_entryexit" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_holiday_leave" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_monthly" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="update_unused_card" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_type" type="integer">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="job_schedular" columnName="start_datetime" columnDataType="datetime"/>
        <dropDefaultValue tableName="job_schedular" columnName="end_datetime" columnDataType="datetime"/>
        <dropDefaultValue tableName="job_schedular" columnName="lastrun_datetime" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
