<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity AnnualLeave.
    -->
    <changeSet id="20201130003036-1" author="jhipster">
        <createTable tableName="annual_leave">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="leave_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="return_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="paid" type="double">
                <constraints nullable="true" />
            </column>
            <column name="dayoff" type="double">
                <constraints nullable="true" />
            </column>
            <column name="holiday" type="double">
                <constraints nullable="true" />
            </column>
            <column name="travel" type="double">
                <constraints nullable="true" />
            </column>
            <column name="military" type="double">
                <constraints nullable="true" />
            </column>
            <column name="is_used" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="created" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="modified" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="modified_user" type="varchar(80)">
                <constraints nullable="true" />
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="schedule_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="annual_leave" columnName="created" columnDataType="datetime"/>
        <dropDefaultValue tableName="annual_leave" columnName="modified" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
