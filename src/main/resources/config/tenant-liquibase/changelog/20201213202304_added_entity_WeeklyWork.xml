        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity WeeklyWork.
    -->
    <changeSet id="20201213202304-1" author="jhipster">
        <createTable tableName="weekly_work">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
